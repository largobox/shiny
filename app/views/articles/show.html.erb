<% content_for :article_content_list do %>

<div id = 'parent_content_list'>
	<div class = 'content_list'>

		<b>Содержание</b>

		<div class = 'content_list_elem dark_content_link'>
		  <a href = '#begin'>К началу</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#overview'>Краткий обзор</a>
	  </div>
		
		<div class = 'content_list_elem dark_content_link'>
		  <a href = '#skills'>Механика скиллов</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#pick_time'>Стадия пика</a>
		</div>  
		
		<div class = 'content_list_elem dark_content_link'>
      <a href = '#lining'>Выбор линии</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#hero_bad_choice'>Неудобные противники</a>
		</div>

		<div class = 'content_list_elem dark_content_link'>
		  <a href = '#hero_good_choice'>Удобные противники</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#start_items'>Начальный закуп</a>
		</div>

		<div class = 'content_list_elem dark_content_link'>	
		  <a href = '#early_game'>Ранняя стадия</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#mid_game'>Середина игры</a>
		</div>

		<div class = 'content_list_elem dark_content_link'>
		  <a href = '#late_game'>Поздняя стадия</a>
		</div>

		<div class = 'content_list_elem'>
		  <a href = '#good_teammate'>Поговорим о союзниках</a>
		</div>

		<div class = 'content_list_elem dark_content_link'>		
		 <a href = '#skillbuild'>Скиллбилд</a>
		</div>

	</div>

	<div class = 'hide_content_list'>
		<div class = 'hide_triangle'></div>
		Спрятать
	</div>

	<div class = 'show_content_list'>
		Показать
		<div class = 'hide_triangle'></div>
	</div>
</div>

<% end %>

<div class = 'article_cont'>
	
	<h2><%= @article.title %></h2>

  <div class = 'hero_inf_cont'>
	  <div class = 'article_pic_on_show_page'>
		  <%= image_tag @article.article_pic.url(:normal) %>
	  </div>
	  <div class = 'hero_roles'>
	  	<% @hero.roles.each_with_index do |r,i| %>
	  	  <%= r %>
	  	  <% if i != @hero.roles.size - 1 and i != 0 %>
	  	  ,
	  	  <% end %>
	  	<% end %>
	  </div>
  </div>

  <div class = 'hero_inf_cont'>
	  <div class = 'base_attr_cont'>
	  	<div class = 'base_attr_elem'>
	  	  <%= image_tag 'str.png' %>
	  	</div>
	  	<div class = 'base_attr_elem_value'>
	  		<%= "%g" % @hero.base_strength %> + <%= @hero.increase_strength %>
	  	</div>
	  	<div class = 'base_attr_elem'>
	  	  <%= image_tag 'agl.png' %>
	  	</div>
	  	<div class = 'base_attr_elem_value'>
	  		<%= "%g" % @hero.base_agility %> + <%= @hero.increase_agility %>
	  	</div>
	  	<div class = 'base_attr_elem'>
	  	  <%= image_tag 'int.png' %>
	  	</div>
	  	<div class = 'base_attr_elem_value'>
	  		<%= "%g" % @hero.base_intelligence %> + <%= @hero.increase_intelligence%>
	  	</div>
	  </div>

	  <div class = 'hero_attr_cont_with_name'>
	  	<div class = 'hero_attr_elem'>
	  		Скорость передвижения: 
	  	</div>
	    <div class = 'hero_attr_elem'>
	  	  Базовый армор: 
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  Урон: 
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  Дальность атаки: 
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  Базовая скорость атаки: 
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  Скорость поворота: 
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  Базовая регенерация HP: 
	    </div>
	  </div>

	  <div class = 'hero_attr_cont_with_value'>
	  	<div class = 'hero_attr_elem'>
	  		<%= "%g" % @hero.base_movement_speed %>
	  	</div>
	    <div class = 'hero_attr_elem'>
	    	<%= "%g" % @hero.base_armor %>
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  <%= "%g" % @hero.base_min_damage %> - <%= "%g" % @hero.base_max_damage %>
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  <%= "%g" % @hero.attack_range %>
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  <%= @hero.base_attack_time %>
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  <%= @hero.rotation_speed %>
	    </div>
	    <div class = 'hero_attr_elem'>
	  	  <%= @hero.base_hp_regen %>
	    </div>
	  </div>
  </div>

	<%= raw ERB.new(@article.body).result(binding) %>
</div>

<div class = 'article_additional_info'>
	<%= link_to "Посмотреть комментарии (#{@article.comment_counter})", shiny_comments_path(article_id: @article.id) %>
	<div class = 'article_inf_elem'>
	  Просмотров: <%= @article.view_counter %>
	</div>
	<div class = 'article_inf_elem'>
	  Обновлён: <%= @article.updated_at.strftime('%F') %>
	</div>
</div>